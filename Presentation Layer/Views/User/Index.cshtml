@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>
<br />
<br />
<a asp-controller="User" asp-action="Create" class="btn btn-primary">Create New User</a>
<br />
<br />
<form asp-action="Index" asp-controller="User" class="my-3">
    <div class="row">
        <div class="col-sm-10">
            <input placeholder="Search By Email" name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-2">
            <input class="btn btn-success btn-block" type="submit" value="Search" />
        </div>
    </div>
</form>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U=>U.Id)</th>
                <th>@Html.DisplayNameFor(U=>U.Fname)</th>
                <th>@Html.DisplayNameFor(U=>U.Lname)</th>
                <th>@Html.DisplayNameFor(U=>U.Email)</th>
                <th>@Html.DisplayNameFor(U=>U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U=>U.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(E=>item.Id)</td>
                    <td>@Html.DisplayFor(E=>item.Fname)</td>
                    <td>@Html.DisplayFor(E=>item.Lname)</td>
                    <td>@Html.DisplayFor(E=>item.Email)</td>
                    <td>@Html.DisplayFor(E=>item.PhoneNumber)</td>
                    <td>@string.Join(",",item.Roles)</td>
                    <partial name="_ButtonPartialView" model="item.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning ">
        <h3>There Is No Users</h3>
    </div>
}

