@model IEnumerable<RoleViewModel> 
@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>
<br />
<br />
<a asp-controller="Role" asp-action="Create" class="btn btn-primary">Create New Role</a>
<br />
<br />
<form asp-action="Index" asp-controller="Role" class="my-3">
    <div class="row">
        <div class="col-sm-10">
            <input placeholder="Search By Name" name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-2">
            <input class="btn btn-success btn-block" type="submit" value="Search" />
        </div>
    </div>
</form>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U=>U.Id)</th>
                <th>@Html.DisplayNameFor(U=>U.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(E=>item.Id)</td>
                    <td>@Html.DisplayFor(E=>item.Name)</td>
                    <partial name="_ButtonPartialView" model="item.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning ">
        <h3>There Is No Roles</h3>
    </div>
}


